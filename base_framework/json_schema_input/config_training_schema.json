{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "/schemas/config_training",
    "type": "object",
    "properties": {
      "epochs": {
        "description": "Number of epochs for the network to be trained on.",
        "type": "integer"
      },
      "n_phys": {
        "description": "Number of (potentially generated) points to enforce the fulfillment of the differential equation.",
        "type": "integer"
      },
      "optimizer": {
        "description": "Choice of optimizer.",
        "type" : "string",
        "enum" : ["adam", "lbfgs_tf_probability", "lbfgs"]
      },
      "log_frequency": {
        "description": "Logging frequency for training.",
        "type": "integer"
      },
      "validation_frequency": {
        "description": "Validation frequency in training.",
        "type": "integer"
      },
      "storage_frequency": {
        "description": "Storage frequency of intermediate results.",
        "type": "integer"
      },
      "learning_rate": {
        "description": "Learning rate, relevant for adam optimizers and the first step of lbfgs.",
        "type": "number"
      },
      "w_data": {
        "description": "Weighting of the input data in comparison to the equation enforcement",
        "type": "number"
      },
      "problem_specifics":{
        "description": "Problem specific information. This can be used to e.g. set collocation points",
        "type":"array",
        "items": {
          "type": "object",
          "properties":{
            "name": {
              "description": "Name of setting",
              "type": "string"
            },
            "value": {
              "description": "Value of setting given as string",
              "type": "string"
            }
          },
          "required": [
            "name", 
            "value"
          ]
        }
      }
    },
    "required": [
      "epochs",
      "n_phys"
    ]
  }